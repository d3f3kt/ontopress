{% extends 'base.html.twig' %}

{% block headline %}OntoPress Dashboard{% endblock %}
{% block content %}
<div class="wrap">
    <div id="welcome-panel" class="welcome-panel">
        <input type="hidden" id="welcomepanelnonce" name="welcomepanelnonce" value="2f6f89aff2" />

        <div class="welcome-panel-content">
            <h2>Willkommen bei OntoPress</h2>
            <p class="about-description">Dieses Plugin ermöglicht Ihnen das Hochladen und Verwalten von Ontologien</p>

            <div class="welcome-panel-column-container">
                <div class="welcome-panel-column">
                   <!--Ontologys-->
                    <div class="dashboard-square">
                        <ul>
                            <li class="number">12</li>
                            <li>Ontologien</li>
                            <li>____________________</li>
                            <li><a href="{{path('ontopress_ontologyAdd')}}" class="welcome-icon welcome-add-page">Hinzufügen</a></li>
                        </ul>
                    </div>
                </div>
                <div class="welcome-panel-column">
                    <!--Forms-->
                    <div class="dashboard-square">
                        <ul>
                            <li class="number">21</li>
                            <li>Formulare</li>
                            <li>____________________</li>
                            <li><a href="{{path('ontopress_formsCreate')}}" class="welcome-icon welcome-add-page">Hinzufügen</a></li>
                        </ul>
                    </div>
                </div>
                <div class="welcome-panel-column welcome-panel-last">
                    <!--Resources-->
                    <div class="dashboard-square">
                        <ul>
                            <li class="number">222</li>
                            <li>Ressourcen</li>
                            <li>____________________</li>
                            <li><a href="{{path('ontopress_resourceAdd')}}" class="welcome-icon welcome-add-page">Hinzufügen</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="dashboard-widgets-wrap">
        <div id="dashboard-widgets" class="metabox-holder columns-2">
            <div id="postbox-container-1" class="postbox-container">
                <div id="normal-sortables" class="meta-box-sortables">
                    <div id="dashboard_ontology" class="postbox " >
                        <h2 class='hndle'><span>Am meisten benutzte Ontologien</span></h2>
                        <div class="inside">
                            <table class="wp-list-resource widefat fixed striped users">
                                <!--Table--->
                                <thead>
                                <tr>
                                    <th>
                                            <span>ID</span>
                                    </th>
                                    <th>
                                            <span>Name</span>
                                    </th>
                                    <th>
                                            <span>Formulare</span>
                                    </th>
                                    <th>
                                            <span>Ressourcen</span>
                                    </th>
                                </tr>
                                </thead>
                                <!--Testcontent-->
                                <tbody>
                                {% for onto in dashTableOnto %}
                                    <tr>
                                        <td>
                                            {{onto.id}}
                                        </td>
                                        <td>
                                            {{onto.name}}
                                        </td>
                                        <td>
                                            {{onto.form}}
                                        </td>
                                        <td>
                                            {{onto.resource}}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                           </table>
                        </div>
                    </div>
                </div>
            </div>
            <div id="postbox-container-1" class="postbox-container">
                <div id="normal-sortables" class="meta-box-sortables">
                    <div id="dashboard_form" class="postbox">
                       <h2 class='hndle'><span>Am meisten benutzte Formulare</span></h2>
                        <div class="inside">
                            <table class="wp-list-resource widefat fixed striped users">
                               <!--Table-->
                                <thead>
                                <tr>
                                    <th>
                                            <span>ID</span>
                                    </th>
                                    <th>
                                            <span>Ontologie</span>
                                    </th>
                                    <th>
                                            <span>Formularname</span>
                                    </th>
                                    <th>
                                            <span>Neue Ressource</span>
                                    </th>
                                </tr>
                                </thead>
                                <!--Testcontent-->
                                <tbody>
                                {% for form in dashTableForm %}
                                    <tr>
                                        <td>
                                            {{form.id}}
                                        </td>
                                        <td>
                                            {{form.ontology}}
                                        </td>
                                        <td>
                                            {{form.formName}}
                                        </td>
                                        <td>
                                            <a href="{{path('ontopress_resourceAdd')}}">Neu</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="dashboard-widgets-wrap">
        <div id="dashboard-widgets" class="metabox-holder columns-3">
            <div id="postbox-container-1" class="postbox-container">
                <div id="normal-sortables" class="meta-box-sortables">
                    <div id="dashboard_form" class="postbox">
                        <h2 class='hndle'><span>Neueste Gebäude</span></h2>
                        <div class="inside">
                            <table class="wp-list-resource widefat fixed striped users">
                                <!--Table-->
                                <thead>
                                <tr>
                                    <th>
                                        <span>ID</span>
                                    </th>
                                    <th>
                                        <span>Titel</span>
                                    </th>
                                </tr>
                                </thead>
                                <!--Tablecontent-->
                                <tbody>
                                {% for building in resTableBuildings %}
                                    <tr>
                                        <td>
                                            {{building.id}}
                                        </td>
                                        <td>
                                            {{building.title}}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div id="postbox-container-1" class="postbox-container">
                <div id="normal-sortables" class="meta-box-sortables">
                    <div id="dashboard_form" class="postbox">
                        <h2 class='hndle'><span>Neueste Plätze</span></h2>
                        <div class="inside">
                            <table class="wp-list-resource widefat fixed striped users">
                                <!--Table-->
                                <thead>
                                <tr>
                                    <th>
                                        <span>ID</span>
                                    </th>
                                    <th>
                                        <span>Titel</span>
                                    </th>
                                </tr>
                                </thead>
                                <!--Tablecontent-->
                                <tbody>
                                {% for place in resTablePlaces %}
                                    <tr>
                                        <td>
                                            {{place.id}}
                                        </td>
                                        <td>
                                            {{place.title}}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div id="postbox-container-1" class="postbox-container">
                <div id="normal-sortables" class="meta-box-sortables">
                    <div id="dashboard_form" class="postbox">
                        <h2 class='hndle'><span>Neueste Kirchen</span></h2>
                        <div class="inside">
                            <table class="wp-list-resource widefat fixed striped users">
                                <!--Table-->
                                <thead>
                                <tr>
                                    <th>
                                        <span>ID</span>
                                    </th>
                                    <th>
                                        <span>Titel</span>
                                    </th>
                                </tr>
                                </thead>
                                <!--Tablecontent-->
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!--dashboard widget wrap-->
</div><!--wrap-->

{% endblock %}
