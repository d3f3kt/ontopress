{% extends 'base.html.twig' %}


{% block headline %}
       Ressourcen Verwaltung
    <a href="{{path('ontopress_resourceAdd')}}" class="page-title-action">Neu hinzufügen</a>
{% endblock %}
{% block content %}
    <form method="get">
        <p class="search-box">
        	<label for="user-search-input" class="screen-reader-text">Suche Ressourcen:</label>
            <input type="text" value="ontopress_resource" name="page" style="display:none">
        	<input type="search" value="" name="s" id="user-search-input">
        	<input type="submit" value="Ressourcen suchen" class="button" id="search-submit">
        </p>
        <div class="tablenav top">
            <div class="alignleft">
                Ontologie: <select name="graph">
                    <option value="">Filtern</option>
                {% for graph in graphs %}
                    <option value="{{ graph.uri }}">{{ graph.name }}</option>
                {% endfor %}
                </select>
            </div>
        </div>
        <table class="wp-list-resource widefat fixed striped users">
            <thead>
            <tr>
                <td class="manage-column column-cb check-column" id="cb">
                    <label for="cb-select-all-1" class="screen-reader-text">Alle auswählen</label>
                    <input type="checkbox" id="cb-select-all-1">
                </td>
                <th scope="col" class="manage-column column-Titel sortable desc">
                    <a href="#">
                        <span>Titel</span>
                        <span class="sorting-indicator"></span>
                    </a>
                </th>
                <th scope="col" class="manage-column column-Autor sortable desc">
                    <a href="#">
                        <span>Autor</span>
                        <span class="sorting-indicator"></span>
                    </a>
                </th>
                <th scope="col" class="manage-column column-Datum sortable desc">
                    <a href="#">
                        <span>Datum</span>
                        <span class="sorting-indicator"></span>
                    </a>
                </th>
            </tr>
            </thead>
            <tbody id="the-list" data-wp-lists="list:resource">
            {% for resource in resourceManageTable %}
                <tr>
                    <th class="check-column" scope="row">
                        <label for="resource_1" class="screen-reader-text">Augustusplatz auswählen</label>
                        <input type="checkbox" value="1" id="resource_1" name="resources[]">
                    </th>
                    <td class="Titel column-Titel" data-colname="Titel">
                        <p>{{ resource.title }}</p>
                        <div class="row-actions">
                            <span class="edit"><a href="{{ path('ontopress_resourceEdit',{'uri': (resource.uri), 'title': (resource.title)}) }}">Bearbeiten</a></span>
                            <span class="delete"><a href="{{ path('ontopress_resourceDelete',{'uri': (resource.uri), 'title': (resource.title)}) }}">Löschen</a></span>
                        </div>
                    </td>
                    <td class="Autor column-Autor" data-colname="Autor">
                        <p>{{ resource.author }}</p>
                    </td>
                    <td class="Datum column-Datum" data-colname="Datum">
                        <p>{{ resource.date|date("d.m.Y") }}</p>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td class="manage-column column-cb check-column" id="cb">
                    <label for="cb-select-all-1" class="screen-reader-text">Alle auswählen</label>
                    <input type="checkbox" id="cb-select-all-1">
                </td>
                <th scope="col" class="manage-column column-titel sortable desc">
                    <a href="#">
                        <span>Titel</span>
                        <span class="sorting-indicator"></span>
                    </a>
                </th>
                <th scope="col" class="manage-column column-autor sortable desc">
                    <a href="#">
                        <span>Autor</span>
                        <span class="sorting-indicator"></span>
                    </a>
                </th>
                <th scope="col" class="manage-column column-datum sortable desc">
                    <a href="#">
                        <span>Datum</span>
                        <span class="sorting-indicator"></span>
                    </a>
                </th>
            </tr>
            </tfoot>
        </table>
    </form>
    <div class="tablenav bottom">
        <select name="action">
            <option value="value1" selected>Aktion wählen</option>
            <option value="value3">In Papierkorb legen</option>
        </select>
        <button type="button" class="button">Übernehmen</button>
    </div>

{% endblock %}
